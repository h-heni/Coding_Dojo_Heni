@model Dish
<h1>@Model.Name</h1>
<p>@Model.Name by @Model.Chef</p>
<hr>
<h4>@Model.Description</h4>
<label asp-for="Calories"></label> <t>: @Model.Calories</t> <br>
<label asp-for="Tastiness"></label> <t>: @Model.Tastiness</t> <br> <br>

<a href="/delete/@Model.DishId"><button class="btn btn-danger">Delete</button></a>
<a href="/dishes/@Model.DishId/edit"><button class="btn btn-info">Edit</button></a>