@model Dish
<form asp-action="Add" asp-controller="Home" method="post" class="mt-5">
    <div class="d-flex w-50 m-auto gap-5">
        <div class="d-flex flex-column gap-5">
        <div class="form-group">
        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef"></label>
        <input asp-for="Chef">
        </div>
        <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        </div>
        <div class="form-group">
        <span asp-validation-for="Calories"></span>
        <label asp-for="Calories"></label>
        <input asp-for="Calories">
        </div>
    </div>
    <div class="d-flex flex-column mx-3">
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            @for (int i = 1; i < 6; i++)
            {
            <option value="@i">@i</option>
                
            }
        </select>

    </div>
    <div class="d-flex flex-column gap-3">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="30" rows="10"></textarea>
        <input type="submit" value="Add Dish">
    </div>
    

    </div>
</form>