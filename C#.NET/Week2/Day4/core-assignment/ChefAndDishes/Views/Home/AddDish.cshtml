<h1>Add a dish</h1>
<hr>
@model Dish
<form asp-action="CreateDish" method="post">
    <div class="form-group">
        <label for="">Name of Dish :</label>
        <input asp-for="DishtName">
    </div>
    <div class="form-group">
        <label for=""># of Calories :</label>
        <input asp-for="Calories">
    </div>
    <div class="form-group">
        <label for="">Chef's Name </label>
        <select asp-for="ChefId">
@foreach (var item in ViewBag.one)
{
    <option value="@item.ChefId">@item.FirstName @item.LastName</option>
}
        </select>
    </div>
        <div class="form-group">
        <label for="">Tastiness</label>
        <select asp-for="Tastiness">
            @for (int i = 1; i < 6; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>
    <input type="submit" value="Add Chef">
</form>