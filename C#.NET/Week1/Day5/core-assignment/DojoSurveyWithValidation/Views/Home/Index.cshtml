<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
@model Survey

    <Form asp-action="Result" asp-controller="Home" method="post">
        <div>
        <span style="color: red;" asp-validation-for="Name"></span>
        <label asp-for="Name"></label> 
        <input asp-for="Name">
        </div>
        <div>
        <span style="color: red;" asp-validation-for="Location"></span>
        <label asp-for="Location"></label> 
        <select asp-for="Location" id="">
            <option value="San Jose">San Jose</option>
            <option value="LA">LA</option>
            <option value="Cartel">Cartel</option>
        </select>
        </div>
        <div>
        <span style="color: red;" asp-validation-for="Language"></span>
        <label asp-for="Language"></label> 
        <select asp-for="Language" id="">
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Mern">Mern</option>
        </select>
        </div>
        <div>
        <span style="color: red;" asp-validation-for="Comment"></span>
        <label asp-for="Comment"></label> <br> 

        <textarea asp-for="Comment" id="" cols="30" rows="10"></textarea> <br>
        <input type="submit" value="Submit">


        </div>
    

    </Form>

</body>
</html>