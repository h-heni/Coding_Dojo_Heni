<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Here are some delicious foods</h1>
    @{  string[] arr = {"Apple Pie", "Pizza", "Cinnamon Rolis", "Lasagna", "Choclate Cake"};
    foreach(var food in arr ){
        if(food.Substring(0, 1)=="C"){
            <p style="color: red;">@food</p>
        }
        else {<p>@food</p>}
    }

    }
</body>
</html>