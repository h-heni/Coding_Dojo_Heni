<h1>@ViewBag.OneCat.Name</h1>

<div class="row">

<div class="col-6">
<h3>Products</h3>
@model Association
@foreach (Association p in ViewBag.OneCat.AssociationCategory)
{

        
    <p>@p.Product.Name</p>
    
}
</div>
<div class="col-6">
    <form asp-action=Create asp-route-CategoryId=@ViewBag.OneCat.CategoryId method="post">
            <select asp-for="ProductId">

        @foreach (Product p in ViewBag.AllProduct)
        {
            <option value="@p.ProductId">@p.Name</option>
        }
            </select>
            <input type="submit" value="Add">
    </form>

</div>
</div>