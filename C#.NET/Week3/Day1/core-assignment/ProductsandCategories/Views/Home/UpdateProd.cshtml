<h1>hello</h1>
@model Association
<h1>@ViewBag.OneProdWithCategories.Name</h1>
    
    <h3>Category</h3>
        
    <form asp-action="addCattoProd" method="post" asp-route-ProductId="@ViewBag.OneProdWithCategories.ProductId">

    <div class="mb-3">
        <label class="col-sm-2 col-form-label" asp-for="CategoryId">Categories</label>
    <select class="form-select form-select-lg mb-3" aria-label="Default select example" asp-for="CategoryId">
    @foreach (var c in ViewBag.AllCat)
    {
        <option value="@c.CategoryId">@c.Name</option>

    }
    </select>
    <input type="submit" value="Add Category">
    </div>

    </form>

<div class="border border-dark px-5">

    @foreach (Association a in ViewBag.OneProdWithCategories.AssociationProduct)
    {
        
    <p>@a.Category.Name</p>
    }
</div>